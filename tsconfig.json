{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es2015","dom.iterable", "esnext"],
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "types": ["next", "react", "node"],
    "typeRoots": ["./types","./node_modules/@types", "./node_modules/@prisma/client"],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx", // Include pages directory
    "prisma/**/*.ts",
    "next-auth.d.ts",
  ],
  "exclude": ["node_modules", "scripts"]
}
