generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Debugging
//prisma.db.logQueryDatasource = true

// Define models here
// Define a model for users
model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  activities  Activity[]
}

// Define a model for activities
model Activity {
  id          Int      @id @default(autoincrement())
  name       String
  description String
  date        DateTime
  time        String
  adress    String?
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?     // Define a foreign key to link activities to users
}