generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String 
  activities Activity[]
  sessions  Session[] // Relation to Session model

}

model Activity {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  date        DateTime
  time        String
  adress      String
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
}
model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}
